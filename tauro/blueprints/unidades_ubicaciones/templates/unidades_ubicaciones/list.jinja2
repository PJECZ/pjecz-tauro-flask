{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_admin('UNIDADES UBICACIONES') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('unidades_ubicaciones.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('unidades_ubicaciones.list_active')) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <!-- Filtros unidadesUbicaciones -->
        <div class="row">
            <div class="col">
                <form class="row g-1 mb-3" id="filtradorForm" onsubmit="filtrosUnidadesUbicaciones.buscar(); return false;">
                    <div class="col-5">
                        <div class="form-floating">
                            <select class="form-select" id="unidadSelect" name="unidadSelect" aria-label="Todas" onchange="filtrosUnidadesUbicaciones.buscar(); return false;" style="flex: inherit;">
                                <option selected value=""></option>
                                {% for unidad in unidades %}
                                    <option value="{{unidad.id}}">{{unidad.clave}}: {{unidad.nombre}}</option>
                                {% endfor %}
                            </select>
                            <label for="unidadSelect">Unidad</label>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-floating">
                            <input id="filtroUbicacion" type="text" class="form-control" aria-label="Ubicacion" style="text-transform: uppercase;">
                            <label for="filtroUbicacion">Ubicacion</label>
                        </div>
                    </div>
                    <div class="col-2 text-end">
                        <button title="Buscar" class="btn btn-primary btn-lg" onclick="filtrosUnidadesUbicaciones.buscar(); return false;" id="button-buscar"><span class="iconify" data-icon="mdi:magnify"></span></button>
                        <button title="Limpiar" class="btn btn-warning btn-lg" type="reset" onclick="filtrosUnidadesUbicaciones.limpiar();" id="button-limpiar"><span class="iconify" data-icon="mdi:broom"></span></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- DataTable unidadesUbicaciones -->
        <table id="unidades_ubicaciones_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Unidad</th>
                    <th>Ubicacion</th>
                    <th>Activo</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="{{ url_for('static', filename='js/datatables-constructor.js') }}"></script>
    <script src="{{ url_for('static', filename='js/datatables-filtros.js') }}"></script>
    <script>
        // DataTable unidadesUbicaciones
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDataTable = constructorDataTable.config();
        configDataTable['ajax']['url'] = '{{ url_for("unidades_ubicaciones.datatable_json") }}';
        configDataTable['ajax']['data'] = {{ filtros }};
        configDataTable['columns'] = [
            { data: 'id' },
            { data: 'unidad' },
            { data: 'ubicacion' },
            { data: 'es_activo' }
        ];
        configDataTable['columnDefs'] = [
            {
                targets: [1, 2], // unidad, ubicacion
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.nombre + '</a>';
                }
            },
            {
                targets: 3, // es_activo
                data: null,
                render: function(data, type, row, meta) {
                    if (data) {
                        return '<span class="iconify" data-icon="mdi:checkbox-marked" style="font-size: 1.4em"></span>';
                    }
                    return '<span class="iconify text-secondary" data-icon="mdi:checkbox-blank-outline" style="font-size: 1.4em"></span>';
                }
            }
        ];
        // Filtros unidadesUbicaciones
        const filtrosUnidadesUbicaciones = new FiltrosDataTable('#unidades_ubicaciones_datatable', configDataTable);
        filtrosUnidadesUbicaciones.agregarInput('unidadSelect', 'unidad_id');
        filtrosUnidadesUbicaciones.agregarInput('filtroUbicacion', 'ubicacion_nombre');
        filtrosUnidadesUbicaciones.precargar();
    </script>
{% endblock %}
