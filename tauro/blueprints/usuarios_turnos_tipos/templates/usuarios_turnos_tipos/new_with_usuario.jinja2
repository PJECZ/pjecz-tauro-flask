{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Nuevo Usuario-Turno-Tipo{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Nuevo Usuario-Turno-Tipo') }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'usuario_id': usuario.id} %}
        {% call f.form_tag('usuarios_turnos_tipos.new_with_usuario', fid='usuario_turno_tipo_form', **form_kwargs) %}
            {% call f.form_group(form.usuario, readonly=True) %}{% endcall %}
            {% call f.form_group(form.turno_tipo) %}{% endcall %}
            {% call f.form_group(form.es_activo) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
